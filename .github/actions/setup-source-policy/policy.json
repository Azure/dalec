{
    "rules": [
        {
            "action": "CONVERT",
            "selector": {
                "identifier": "docker-image://docker.io/*"
            },
            "updates": {
                "identifier": "docker-image://${REPO_PREFIX}/dockerhub/mirror/$1"
            }
        },
        {
            "action": "CONVERT",
            "selector": {
                "identifier": "docker-image://mcr.microsoft.com/*"
            },
            "updates": {
                "identifier": "docker-image://${REPO_PREFIX}/mcr/mirror/$1"
            }
        }
    ]
}